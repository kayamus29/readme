{
  "manifest_version": 3,
  "name": "ReadMore",
  "version": "1.0",
  "description": "Open ReadMore app in a popup webview.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage"]
}
